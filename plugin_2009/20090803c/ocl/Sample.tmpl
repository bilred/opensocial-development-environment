package examples;

import java.util.Collection;

import org.opensocial.client.OpenSocialClient;
import org.opensocial.data.OpenSocialPerson;

public class Sample {
    
    private static final String BASE_URI = "http://localhost:8080/social/rest/";
    
    // TODO Please change to the real values for SNS which you use.
    private static final String CONSUMER_KEY = "$consumer_key$";
    private static final String CONSUMER_SECRET = "$consumer_secret$";
    private static final String VIEWER_ID = "$viewer_id$";

    public static void main(String[] args) {
        OpenSocialClient client = new OpenSocialClient("osde");
        client.setProperty(OpenSocialClient.Properties.REST_BASE_URI, BASE_URI);
        client.setProperty(OpenSocialClient.Properties.CONSUMER_KEY, CONSUMER_KEY);
        client.setProperty(OpenSocialClient.Properties.CONSUMER_SECRET, CONSUMER_SECRET);
        client.setProperty(OpenSocialClient.Properties.VIEWER_ID, VIEWER_ID);
        try {
            OpenSocialPerson viewer = client.fetchPerson();
            System.out.println("Viewer: " + viewer.getId());
            Collection<OpenSocialPerson> friends = client.fetchFriends(viewer.getId());
            for (OpenSocialPerson friend : friends) {
                System.out.println("Friend: " + friend.getId());
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

}
