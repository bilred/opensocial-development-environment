<?xml version="1.0" encoding="utf-8"?>

<project name="XMLBeans 2.4.0" default="xmlbean" basedir=".">

   <!-- XMLBeansのインストールディレクトリを指定 -->
   <property name="xmlbeans.home" 
             value="/Applications/java/xmlbeans/xmlbeans-2.4.0" />

   <!-- XMLスキーマを指定 -->
   <property name="schema" value="gadgets.xsd" />

   <!-- 出力するjarファイル名を指定 -->
   <property name="dest.jar"
             value="libs/gadget-xml-models.jar" />

   <path id="xmlbeans.path">
     <fileset dir="${xmlbeans.home}/lib"   includes="*.jar"/>
   </path>

   <taskdef name="xmlbean"
            classname="org.apache.xmlbeans.impl.tool.XMLBean"
            classpathref="xmlbeans.path"
   />

   <target name="xmlbean">
      <xmlbean schema="${schema}"
                destfile="${dest.jar}"
                classpathref="xmlbeans.path" />
   </target>

</project>